@model IEnumerable<PortalDeNoticias.Models.Noticias>

@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>



@foreach (var item in Model) 
{
<div class="panel panel-danger">
    <div class="panel-heading">
        <p class="panel-title">@item.Titulo</p>

    </div>

    <div class="panel-body">

        <p>@item.Conteudo.Substring(0, 100) ...</p>

    </div>

    <div class="panel-footer">
        @Html.ActionLink("Ler mais", "Detalhes", new { id = item.Id }, new { @class = "bnt bnt-primary" })
    </div>
</div>


}


